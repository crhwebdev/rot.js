{
  "name": "rot.js",
  "version": "0.6.0",
  "description": "A roguelike toolkit in JavaScript",
  "main": "rot.js",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "keywords": [
		"rogue",
		"roguelike",
		"game",
		"ascii",
		"tiles",
		"dungeon",
		"los",
		"fov",
		"lighting"
	],
  "scripts": {
    "build": "npm-run-all concat compile",    
    "bundle": "rollup src/rot.js --o rot.js -f umd --name \"rot\"",
    "concat": "node utils/concat.js",
    "compile": "google-closure-compiler-js rot.js > rot.min.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ondras/rot.js.git"
  },
  "author": "Ondrej Zara <ondrej.zara@gmail.com> (http://ondras.zarovi.cz/)",
  "license": "BSD License",
  "bugs": {
    "url": "https://github.com/ondras/rot.js/issues"
  },
  "homepage": "http://ondras.github.io/rot.js/hp/",
  "devDependencies": {
    "concat": "^1.0.3",
    "gh-pages": "^1.1.0",
    "google-closure-compiler-js": "^20180402.0.0",
    "jasmine": "^3.1.0",
    "jsdoc": "^3.5.5",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.57.1"
  }
}
